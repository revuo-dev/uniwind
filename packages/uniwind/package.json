{
    "private": false,
    "name": "uniwind",
    "version": "1.0.0-beta.6",
    "description": "The fastest Tailwind bindings for React Native",
    "homepage": "https://github.com/Unistyles-OSS/uniwind",
    "author": "UnistylesOSS",
    "type": "module",
    "repository": "https://github.com/Unistyles-OSS/uniwind",
    "scripts": {
        "precommit": "bun lint",
        "build": "unbuild && bun build:css",
        "check:typescript": "tsc --noEmit",
        "lint": "eslint src && dprint check",
        "lint:fix": "eslint src --fix",
        "format": "dprint fmt",
        "prepublishOnly": "bun run build",
        "circular:check": "dpdm --no-warning --no-tree -T --exit-code circular:1 src/**/*.ts",
        "build:css": "bun run src/css/index.ts",
        "test": "bun test"
    },
    "style": "./uniwind.css",
    "source": "src/index",
    "exports": {
        ".": {
            "style": "./uniwind.css",
            "types": "./dist/module/index.d.ts",
            "react-native": "./src/index.ts",
            "import": "./dist/module/index.js",
            "default": "./dist/common/index.js"
        },
        "./components": {
            "types": "./no-types.d.ts",
            "default": "./src/components/index.ts"
        },
        "./components/*": {
            "types": "./no-types.d.ts",
            "react-native": "./src/components/native/*.tsx",
            "import": "./dist/module/components/web/*.js",
            "default": "./dist/common/components/web/*.js"
        },
        "./metro": {
            "types": "./dist/metro/index.d.ts",
            "import": "./dist/metro/index.mjs",
            "default": "./dist/metro/index.cjs"
        },
        "./types": "./types.d.ts",
        "./package.json": "./package.json"
    },
    "files": [
        "src",
        "dist",
        "metro",
        "uniwind.css",
        "types.d.ts",
        "README.md"
    ],
    "dependencies": {
        "@tailwindcss/node": "4.1.14",
        "@tailwindcss/oxide": "4.1.14",
        "chokidar": "4.0.3",
        "culori": "4.0.2"
    },
    "peerDependencies": {
        "react": ">=19",
        "react-native": ">=0.81",
        "tailwindcss": ">=4",
        "postcss": ">=8",
        "chalk": ">=2",
        "lightningcss": ">=1.30.0"
    },
    "devDependencies": {
        "@types/bun": "1.2.23",
        "@types/postcss-js": "4.0.4",
        "@types/culori": "4.0.1",
        "typescript": "5.9.3",
        "metro-config": "0.83.3",
        "@babel/core": "7.28.4",
        "@babel/types": "7.28.4",
        "dpdm": "3.14.0",
        "unbuild": "3.6.1",
        "lightningcss": "1.30.2",
        "metro-transform-worker": "0.83.3",
        "@expo/metro-config": "54.0.6"
    }
}
