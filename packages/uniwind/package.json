{
    "name": "uniwind",
    "version": "0.0.1",
    "type": "module",
    "license": "MIT",
    "scripts": {
        "precommit": "bun lint",
        "build": "bun scripts/build.js",
        "check:typescript": "tsc --noEmit",
        "lint": "eslint src && dprint check",
        "lint:fix": "eslint src --fix",
        "format": "dprint fmt",
        "prepublishOnly": "bun install && bun run build",
        "circular:check": "dpdm --no-warning --no-tree -T --exit-code circular:1 src/**/*.ts"
    },
    "style": "./uniwind.css",
    "exports": {
        ".": "./uniwind.css",
        "./components/*": {
            "import": "./dist/components/index.mjs",
            "require": "./dist/components/index.cjs",
            "default": "./dist/components/index.cjs"
        },
        "./metro": "./dist/metro/index.cjs"
    },
    "files": [
        "dist",
        "metro",
        "uniwind.css"
    ],
    "dependencies": {
        "@tailwindcss/cli": "4.1.11",
        "@tailwindcss/node": "4.1.11",
        "chokidar": "4.0.3",
        "postcss-js": "4.0.1",
        "culori": "4.0.2"
    },
    "peerDependencies": {
        "react": ">=19.0.0",
        "react-native": "*",
        "tailwindcss": ">=4",
        "postcss": ">=8"
    },
    "devDependencies": {
        "esbuild": "0.25.8",
        "@types/postcss-js": "4.0.4",
        "@types/culori": "4.0.0",
        "typescript": "5.8.3",
        "metro-config": "0.82.5",
        "@babel/core": "7.28.0",
        "@babel/types": "7.28.2",
        "dpdm": "3.14.0"
    }
}
