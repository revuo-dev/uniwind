{
    "private": false,
    "name": "uniwind",
    "version": "0.0.1",
    "description": "The fastest Tailwind bindings for React Native",
    "homepage": "https://github.com/Unistyles-OSS/uniwind",
    "author": "UnistylesOSS",
    "type": "module",
    "repository": "https://github.com/Unistyles-OSS/uniwind",
    "scripts": {
        "precommit": "bun lint",
        "build": "unbuild && bun build:css",
        "check:typescript": "tsc --noEmit",
        "lint": "eslint src && dprint check",
        "lint:fix": "eslint src --fix",
        "format": "dprint fmt",
        "prepublishOnly": "bun run build",
        "circular:check": "dpdm --no-warning --no-tree -T --exit-code circular:1 src/**/*.ts",
        "build:css": "bun run src/css/index.ts",
        "test": "bun test"
    },
    "style": "./uniwind.css",
    "source": "src/index",
    "exports": {
        ".": {
            "style": "./uniwind.css",
            "import": "./dist/module/index.js",
            "react-native": "./src/index.ts",
            "types": "./dist/module/index.d.ts",
            "default": "./dist/common/index.js"
        },
        "./components/*": {
            "import": "./dist/components/module/index.js",
            "default": "./dist/components/common/index.js"
        },
        "./babel": "./dist/babel/index.cjs",
        "./metro": "./dist/metro/index.cjs",
        "./types": "./types.d.ts",
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "src",
        "metro",
        "components",
        "babel",
        "uniwind.css",
        "types.d.ts",
        "README.md"
    ],
    "dependencies": {
        "@tailwindcss/node": "4.1.12",
        "chokidar": "4.0.3",
        "culori": "4.0.2",
        "postcss-js": "4.0.1"
    },
    "peerDependencies": {
        "react": ">=19.0.0",
        "react-native": ">=0.81.0",
        "tailwindcss": ">=4",
        "postcss": ">=8",
        "chalk": ">=2",
        "lightningcss": ">=1.30.0"
    },
    "devDependencies": {
        "@types/bun": "1.2.21",
        "@types/postcss-js": "4.0.4",
        "@types/culori": "4.0.0",
        "typescript": "5.9.2",
        "metro-config": "0.82.5",
        "@babel/core": "7.28.3",
        "@babel/types": "7.28.2",
        "dpdm": "3.14.0",
        "unbuild": "3.6.1",
        "lightningcss": "1.30.1"
    }
}
